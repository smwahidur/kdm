</head>

<body>
    <div class="app-container app-theme-white body-tabs-shadow fixed-header fixed-sidebar sidebar-mobile-open">
        <div class="app-header header-shadow">
            <div class="app-header__logo">
                <span class="erp-logo">KDB</span>
                <div class="header__pane ml-auto">
                    <div>
                        <button type="button" class="hamburger close-sidebar-btn hamburger--elastic" data-class="closed-sidebar">
                            <span class="hamburger-box">
                                <span class="hamburger-inner"></span>
                            </span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="app-header__mobile-menu">
                <div>
                    <button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
                        <span class="hamburger-box">
                            <span class="hamburger-inner"></span>
                        </span>
                    </button>
                </div>
            </div>
            <div class="app-header__menu">
                <span>
                    <button type="button" class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav">
                        <span class="btn-icon-wrapper">
                            <i class="fa fa-ellipsis-v fa-w-6"></i>
                        </span>
                    </button>
                </span>
            </div>


            @Html.Partial("_TopBar")

        </div>

        @*RightDrawer*@

        @*<div class="ui-theme-settings">
            <button type="button" id="TooltipDemo" class="btn-open-options btn btn-warning">
                <i class="fa fa-cog fa-w-16 fa-spin fa-2x"></i>
            </button>
            <div class="theme-settings__inner">
                @Html.Partial("_RightDrawer")
            </div>
        </div>*@        
        
        <div class="app-main">
            <div class="app-sidebar sidebar-shadow">
                @Html.Partial("_CompanyLogo")
                <div class="app-header__mobile-menu">
                    <div>
                        <button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
                            <span class="hamburger-box">
                                <span class="hamburger-inner"></span>
                            </span>
                        </button>
                    </div>
                </div>
                <div class="app-header__menu">
                    <span>
                        <button type="button" class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav">
                            <span class="btn-icon-wrapper">
                                <i class="fa fa-ellipsis-v fa-w-6"></i>
                            </span>
                        </button>
                    </span>
                </div>
                <div class="scrollbar-sidebar">

                    @{

                        @* var role = Html.Action("GetUserRole", "Member", new { UserName = HttpContext.Current.User.Identity.Name });
                        if (role.ToString() == "KDM_MEMBER")
                        {
                            @Html.Partial("_LeftMenuForMembers")
                        }
                        else
                        {
                            @Html.Partial("_LeftMenu")
                        } *@

                        if (HttpContext.Current.User.IsInRole("KDM_MEMBER"))
                        {
                                @Html.Partial("_LeftMenuForMembers")
                        }
                        else
                        {
                                @Html.Partial("_LeftMenu")
                        }

                    }
                </div>
            </div>    
            <div class="app-main__outer">
                <div class="app-main__inner p-2">

                    @RenderBody()
                </div>
                <div class="app-wrapper-footer">
                    <div class="app-footer">
                        <div class="app-footer__inner">
                            @Html.Partial("_Footer")
                        </div>
                    </div>
                </div>
            </div>
            <script src="http://maps.google.com/maps/api/js?sensor=true"></script>
        </div>
    </div>



    <div class="modal fade fixed-modal" tabindex="-1" role="dialog" aria-labelledby="fixed-modal" aria-hidden="true" data-backdrop="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="fixed-modal">New message</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    @RenderSection("FixedModal", false)

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>

    @RenderSection("DynamicModal",false)
   
</body>
    @Scripts.Render("~/script/v1")

@RenderSection("script", false)

</html>
